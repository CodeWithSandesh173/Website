{
    "rules": {
        "users": {
            "$uid": {
                ".read": true,
                ".write": "auth != null && auth.uid == $uid"
            }
        },
        "usernames": {
            ".read": true,
            ".write": "auth != null"
        },
        "messages": {
            ".read": "auth != null",
            ".write": "auth != null"
        },
        "reviews": {
            ".read": true,
            ".write": "auth != null"
        }
    }
}